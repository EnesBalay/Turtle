@model List<EntityLayer.Concrete.Meeting>

@{
}
<div class="page-header">

    <nav aria-label="breadcrumb">

    </nav>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @{
                    bool isActivate = true;
                }
                    <table class="table table-hover table-danger">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Toplantı Adı</th>
                                <th>Toplantı Süresi</th>
                                <th>Toplantı Konumu</th>
                                <th>Katılımcılar</th>
                                @*<th>Durumu</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (!item.Status)
                                {
                                    isActivate = false;
                                    <tr>
                                        <td>
                                            @item.MeetingID
                                        </td>
                                        <td>
                                            @item.MeetingName
                                        </td>
                                        <td>
                                            @item.MeetingDuration
                                        </td>
                                        <td>
                                            @item.Location
                                        </td>
                                        <td>
                                            <ul>
                                                @foreach (var mail in item.Mails)
                                                {
                                                    <li>@mail.email</li>
                                                }
                                            </ul>
                                        </td>
                                        @*<td>
                            @item.Status
                            </td>*@
                                        <td>
                                            <a href="/Meeting/ActivateMeeting/@item.MeetingID" class="btn btn-success"><i class="mdi mdi-again"></i>Tekrar Aktif Et</a>
                                            <a href="/Meeting/EditMeeting/@item.MeetingID" class="btn btn-info"><i class="mdi mdi-info"></i> Düzenle</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                @if (isActivate == true)
                {
                        <h3 class="text-danger mt-3"> Silinmiş toplantı bulunamadı.</h3>
                }
            </div>
        </div>
    </div>
</div>