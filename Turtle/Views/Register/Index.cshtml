@model Turtle.Models.AddProfileImage

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../assets/images/favicon.ico">
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">

            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                @*<img src="../../assets/images/logo.svg">*@
                                <h1 class="text-center">Turtle</h1>
                            </div>
                            <h4>Kayıt Ol</h4>
                            <h6 class="font-weight-light">Aşağıdaki bilgileri doldurarak kolayca kayıt olabilirsiniz.</h6>
                            <form method="post" class="form-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Name,"Ad")
                        @Html.TextBoxFor(x=>x.Name,new{placeholder = "Ad", @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.Name,"",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Surname,"Soyadı")
                        @Html.TextBoxFor(x=>x.Surname,new{placeholder = "Soyad", @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.Surname,"",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Email,"Mail Adresi")
                        @Html.TextBoxFor(x=>x.Email,new{placeholder = "Mail Adresi", @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.Email,"",new{@class="text-danger"})
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.UserName,"Kullanıcı Adı")
                        @Html.TextBoxFor(x=>x.UserName,new{placeholder = "Kullanıcı Adı", @class="form-control"})
                        @Html.ValidationMessageFor(x=>x.UserName,"",new{@class="text-danger"})
                                </div>
                               
                                           
                                <div class="form-group">
                        @Html.LabelFor(x=>x.Password,"Şifre")
                        @Html.TextBoxFor(x=>x.Password,new{placeholder = "Şifre", @class="form-control",type="password"})
                        @Html.ValidationMessageFor(x=>x.Password,"",new{@class="text-danger"})
                                </div>
                                @*<div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> I agree to all Terms &amp; Conditions <i class="input-helper"></i>
                                        </label>
                                    </div>
                                </div>*@
                                <div class="mt-3">
                                   <p class="text-success">@ViewBag.RegisterSuccess</p>
                                    <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" >SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabınız var mı? <a href="/Login" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../assets/js/off-canvas.js"></script>
    <script src="../../assets/js/hoverable-collapse.js"></script>
    <script src="../../assets/js/misc.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- endinject -->

</body>
</html>